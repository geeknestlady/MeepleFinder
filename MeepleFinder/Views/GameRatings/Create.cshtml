@model MeepleFinder.ViewModels.GameRatingsVM.CreateGameRatingsViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Your Rating for:</h1>

<h4>@Html.DisplayNameFor(model => model.GameTitle)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ownership" /> @Html.DisplayNameFor(model => model.Ownership)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PlayAgain" /> @Html.DisplayNameFor(model => model.PlayAgain)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                    <option>6</option>
                    <option>7</option>
                    <option>8</option>
                    <option>9</option>
                    <option>10</option>
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimesPlayed" class="control-label"></label>
                <input asp-for="TimesPlayed" class="form-control" />
                <span asp-validation-for="TimesPlayed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonId" class="control-label" hidden="hidden"></label>
                <input readonly asp-for="PersonId" class="form-control" hidden="hidden" />
                <span asp-validation-for="PersonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameId" class="control-label" hidden="hidden"></label>
                <input readonly asp-for="GameId" class="form-control" hidden="hidden" />
                <span asp-validation-for="GameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

